class Estudiante

instance variables
  codigo: token;
  nombres: seq of char := "???";
  apellidos: seq of char := "???";
  fecha_nacimiento: Fecha;
  inv len nombres >= 3 and len apellidos >= 3;

operations
-- constructor para Estudiante
public Estudiante: token * seq of char * seq of char * Fecha ==> Estudiante
Estudiante(cod, nom, ape, fecha) == (
  codigo := cod;
  nombres := nom;
  apellidos := ape;
  fecha_nacimiento := fecha;
)
pre len nom >= 3 and len ape >= 3;

-- retornar codigo
public getCodigo: () ==> token
getCodigo() == (
  return codigo
);

-- obtener datos
public getDatos: () ==> seq of char
getDatos() == (
  return nombres ^ " " ^ apellidos
);

-- retornar edad
public getEdad: Fecha ==> nat
getEdad(fecha_actual) == (
  return fecha_nacimiento.calcularDiferencia(fecha_actual)
);

functions

end Estudiante
